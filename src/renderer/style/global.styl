.introjs-tooltip
  max-width 50vw
  min-width 300px
.introjs-tooltiptext
  white-space pre-line
  b
    color $primary-color-highlight
    margin-left 5px
  span
    color $text200
.introjs-hint-pulse
  background rgba(200, 60, 60, 0.6)
  border 5px solid rgba(200, 60, 60, 0.8)
.introjs-hint-dot
  border 10px solid rgba(200, 60, 60, 0.8)