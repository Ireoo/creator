// Color
.danger--text
  color #F56C6C
.red--text
  color $red
.green--text
  color $green
.black--text
  color black
  &.lighten-1
    color transparentify(black, 0.9)
  &.lighten-2
    color transparentify(black, 0.8)
/* Parameter Form Start
 */
.parameter-form__item-row
  margin-bottom 5px
  .el-form-item__content
    line-height 20px
  .el-form-item__label
    padding-left 6px
    padding-right 6px
    padding-top 3px
    padding-bottom @padding-top
  .el-input__inner
    border-bottom-left-radius 0
    border-top-left-radius 0
    float left
  .el-input, .el-select
    float left
  .el-form-item__label
    border 1px solid #bfcbd9
    border-right none
    border-bottom-left-radius 4px
    border-top-left-radius @border-bottom-left-radius
    line-height 20px
.parameter-form__item-checkbox
  text-align center
  .el-form-item__label
    border none
.parameter-form__option-preview
  width 20px
  height 20px
  margin-right 5px
  display inline-block
  vertical-align middle
  text-align center
  line-height 20px - 2px
  border 1px solid #cccccc
.parameter-form__option-preview-img
  width 100%
  height 100%
.parameter-form__group-title
  font-size 12px
  font-weight normal
  color #666
  margin-bottom 5px
  padding-left 7px
.parameter-select
  display flex
  width 100%
  .el-radio-button__orig-radio:checked+.el-radio-button__inner
    background $grey100
    color $primary-color-highlight
    border-color $grey200
    box-shadow none
    border-radius 0
  .el-radio-button
    flex-grow 1
  .el-radio-button__inner
    width 100%
    border-left none
    border-right none
    border-top none
    border-color $grey200
    background $grey100
  .el-radio-button:first-child .el-radio-button__inner
    border-radius 0
  .el-radio-button:last-child .el-radio-button__inner
    border-radius 0
.parameter-list
  .el-tabs__new-tab
    color $text200
    border-color $text200
.parameter-form
  padding 0 $padding-size
  .label
    line-height 28px
    min-width 80px
    white-space nowrap
  .parameter-input
    width 80px
  .parameter-input-initial
    width initial
  .parameter-input-x2
    width 160px
  .parameter-input-x3
    width 60px
  .parameter-input-x4
    width 40px
  .el-input__inner
    height 24px
    padding 0 5px
  .lower-label
    position absolute
    bottom -15px
    color $text200
  .icon-button
    width 40px
    border 1px solid $text300
    background $grey100
    line-height 16px
    font-size 12px
    color $text300
    border-radius 5px
    text-align center
    &:hover
      box-shadow 0 2px 1px -1px rgba(0, 0, 0, 0.2), 0 1px 1px 0 rgba(0, 0, 0, 0.14), 0 1px 3px 0 rgba(0, 0, 0, 0.12)
      cursor pointer
    &:active
      box-shadow none
    &.locked
      color $grey100
      border-color $primary-color-highlight
      background $primary-color-highlight
  .el-slider__button-wrapper
    z-index 0
/* Parameter  End
 */
/* Thumbnail panel Start
 */
.el-collapse-item__header, .el-collapse-item__wrap
  background inherit
/* Thumbnail panel End */
.base-flex
  display flex
  position relative
  align-items center
  width 100%
.flex-around
  @extend .base-flex
  justify-content space-around
.flex-between
  @extend .base-flex
  justify-content space-between
.fa-icon-button
  color $text300
  padding 5px
  cursor pointer
  &:hover
    color $primary-color-highlight
  &:active
    color darken($primary-color-highlight, 20)
/* Dialog */
.el-dialog__body
  *
    user-select none
  .el-form-item__label
    min-width 120px
    text-align left
    float left
// Board/Map mouse mode
&.hold-mode
  cursor -webkit-grab
  &:active
    cursor -webkit-grabbing
// Components
circle-button(type)
  if (type == 'smaller')
    $size = 1.5em
  if (type == 'bigger')
    $size = 2em
  min-width $size
  min-height $size
  display inline-block
  text-align center
  font-size $size
  line-height $size
  vertical-align middle
  border-radius 50%
  cursor pointer
  &.active
    background $grey200
  &:hover
    background $grey200
  &:active
    background $grey400
.circle-button
  circle-button('smaller')
.circle-button.big
  circle-button('bigger')
